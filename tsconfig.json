{
    "compilerOptions": {
        // "baseUrl": "./src",
        "rootDir": "src",
        "outDir": "lib",
        "target": "ESNext",
        "sourceMap": true,
        "allowJs": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "jsx": "react",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}